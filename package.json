{
  "name": "calculadora-simples",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev --turbopack",
    "type": "module",
    "type-check": "tsc --noEmit && tsc --noEmit --project tsconfig.spec.json --watch",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "prettier": "prettier --write .",
    "prettier:check": "prettier --check .",
    "postinstall": "npx tailwindcss init -p",
    "build": "npx tailwindcss init -p && next build",
    "start": "next start",
    "lint": "next lint",
    "test": "NODE_OPTIONS=--experimental-vm-modules jest",
    "test:watch": "NODE_OPTIONS=--experimental-vm-modules jest --watch",
    "test:coverage": "NODE_OPTIONS=--experimental-vm-modules jest --coverage",
    "test:update": "NODE_OPTIONS=--experimental-vm-modules jest --updateSnapshot"
  },
  "dependencies": {
    "next": "15.3.3",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "styled-components": "^6.1.19"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3",
    "@tailwindcss/postcss": "^4",
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/react": "^16.3.0",
    "@types/jest": "^30.0.0",
    "eslint": "^9",
    "eslint-config-next": "15.3.3",
    "jest": "^30.0.0",
    "jest-environment-jsdom": "^30.0.0",
    "tailwindcss": "^4",
    "ts-jest": "^29.4.0",
    "typescript": "^5.8.3"
  }
}
